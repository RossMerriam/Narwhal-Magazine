---
// src/components/SiteHeader.astro
import { siteConfig } from '@/utils/site.config';

// Define navigation links in an array for easy management
const navLinks = [
    { href: '/stories/', label: 'Stories' },
    { href: '/authors/', label: 'Authors' },
];
---
<header class="border-b border-gray-200 bg-white/75 backdrop-blur-lg sticky top-0 z-50">
    <div class="container mx-auto flex h-16 items-center justify-between px-4">
        <!-- Site Title linking to the homepage -->
        <a href="/" class="text-xl font-bold text-gray-900 transition-colors hover:text-blue-700">
            {siteConfig.defaultTitle}
        </a>

        <!-- Main Navigation -->
        <nav aria-label="Main navigation">
            <ul class="flex items-center space-x-6 text-sm font-medium">
                {navLinks.map(link => (
                        <li>
                            <a
                                    href={link.href}
                                    class="text-gray-600 transition-colors hover:text-gray-900"
                            >
                                {link.label}
                            </a>
                        </li>
                ))}
            </ul>
        </nav>
    </div>
</header>